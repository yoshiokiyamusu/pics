<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
</head>
<body>
   
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4">

                <!-- Construir un panel:inicio -->
                <ul class="list-group">
                    <a class="list-group-item" href="/">Subir un archivo</a>
                    <br>
                    <a class="list-group-item" href="/files">Archivos guardados</a>
                </ul>
                <!-- Construir un panel:fin -->

            </div>
            <div class="col-md-8">
                <% if (images.length > 0) { %>

                <div class="row">
                    <% for (let pic of images) { %>
                    <div class="col-md-4">
                        <img src="<%= pic.url %>" alt="Image" class="img-fluid">
                    </div>
                    <% }%>
                </div>

                <% } else { %>
                    <h1>No pictures found!</h1>
                <% } %>
            </div>
        </div>
    </div>



</body>
</html>