<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="usuario_login">usuario_login</label>
                <input class="invalid"
                type="text" name="usuario_login" id="usuario_login" value="">
            </div>
            <div class="form-control">
                <label for="password_login">password_login</label>
                <input class=""
                type="text" name="password_login" id="password_login" value="">
            </div>
            <div class="form-control">
                <label for="usuario_wms">usuario_wms</label>
                <input class=""
                type="text" name="usuario_wms" id="usuario_wms" value="">
            </div>
            <div class="form-control">
                <label for="email">email</label>
                <input class=""
                type="email" name="email" id="email" value="">
            </div>
            <div class="form-control">
                <label for="celular">celular</label>
                <input class=""
                type="text" name="celular" id="celular" value="">
            </div>



            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Crear taller</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>